<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.kosarka.MainActivity"
    tools:showIn="@layout/activity_main"
    android:paddingTop="65dp"
    android:orientation="vertical"
    android:layout_weight="0"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <!--Ovo je TextView Domaći-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="Domaći:"
                />
            <!--Ovo je TextView koji pokazuje rezultat za domaće-->
            <TextView
                android:id="@+id/domaci_rezultat"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="0"
                />
            <!--Ovo je Button plus tri koji dodaje plus tri koša za domaće-->
            <Button
                android:id="@+id/plus_tri_rezultat"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:onClick="plus_tri_domaci"
                />
            <!--Ovo je Button plus dva koji dodaje plus dva koša za domaće-->
            <Button
                android:id="@+id/plus_dva_rezultat"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:onClick="plus_dva_domaci"
                />
            <!--Ovo je Button slobodno bacanje za domaće-->
            <Button
                android:id="@+id/Slobodno_rezultat"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slobodno bacanje"
                android:onClick="slobodno_bacanje_domaci"
                />

        </LinearLayout>





        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <!--Ovo je TextView Gosti-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="Gosti:"
                />
            <!--Ovo je TextView koji pokazuje rezultat za goste-->
            <TextView
                android:id="@+id/gosti_rezultat"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="0"
                />
            <!--Ovo je Button plus tri koji dodaje plus tri koša za goste-->
            <Button
                android:id="@+id/plus_tri_rezultatGosti"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:onClick="plus_tri_gosti"
                />
            <!--Ovo je Button plus dva koji dodaje plus dva koša za goste-->
            <Button
                android:id="@+id/plus_dva_rezultatGosti"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:onClick="plus_dva_gosti"
                />
            <!--Ovo je Button slobodno bacanje za goste-->
            <Button
                android:id="@+id/Slobodno_rezultatGosti"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slobodno bacanje"
                android:onClick="slobodno_bacanje_gosti"
                />
        </LinearLayout>
    </LinearLayout>
    <!--Ovo je Button reset koji resetira sve i počinje od nule-->
    <Button
        android:id="@+id/reset"
        android:layout_weight="0"
        android:text="Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="reset"/>

</LinearLayout>